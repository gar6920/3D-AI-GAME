{
  "name": "3d-ai-game-platform",
  "version": "1.0.0",
  "description": "3D AI Game Platform",
  "main": "electron/main.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "node server/core/index.js",
    "dev": "nodemon server/core/index.js",
    "prod": "cross-env NODE_ENV=production node server/core/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && npm run electron\"",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "3d",
    "game",
    "platform",
    "multiplayer",
    "modular",
    "threejs",
    "colyseus"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@colyseus/monitor": "^0.14.22",
    "@gltf-transform/core": "^4.1.3",
    "ammo.js": "^0.0.10",
    "ammojs": "^0.0.2",
    "ammojs-typed": "^1.0.6",
    "colyseus": "^0.14.23",
    "colyseus.js": "^0.14.13",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "electron": "^28.1.0",
    "express": "^4.18.1",
    "raw-body": "^3.0.0",
    "three": "^0.175.0",
    "three-gltf-loader": "^1.111.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.6.2",
    "nodemon": "^3.1.9",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.3d-ai-game.app",
    "productName": "3D AI Game Platform",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/images/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "protocols": {
      "name": "3D AI Game Protocol",
      "schemes": [
        "3dgame"
      ]
    },
    "files": [
      "electron/**/*",
      "public/**/*",
      "server/**/*",
      "package.json"
    ]
  }
}
